
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Role checks based on document data
    function isAdmin() {
      return isSignedIn() && getProfile().role == 'admin';
    }
    
    function isTutor() {
      return isSignedIn() && (getProfile().role == 'tutor' || getProfile().role == 'admin');
    }

    // --- Rules ---

    // User profiles and role-based access
    match /users/{userId} {
      // Users can read their own profile, Admins and Tutors can read any for monitoring
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin() || isTutor());
      
      // Only admins can change a user's role or critical subscription status
      // Users can update their own non-sensitive fields
      allow update: if isAdmin() || (
        isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'subscriptionStatus'])
      );
      
      // Users can create their own profile on sign up
      allow create: if isSignedIn() && isOwner(userId);

      // Progress subcollection
      match /progress/{moduleId} {
        allow read: if isOwner(userId) || isTutor();
        allow write: if isOwner(userId) || isAdmin();
      }
      
      // Solved problems tracking
      match /solvedProblems/{problemId} {
        allow read: if isOwner(userId) || isTutor();
        allow write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Global static content (Read-only for students, writable by Admins/Tutors)
    match /modules/{moduleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTutor();
    }

    // Leaderboard and analytics
    match /leaderboard/{userId} {
      allow read: if isSignedIn();
      // Only system batch writes (via Admin SDK/Batch) or Admin users
      allow write: if isAdmin() || isOwner(userId);
    }
    
    match /submissions/{subId} {
      allow read: if isSignedIn() && (resource.data.uid == request.auth.uid || isTutor());
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isAdmin();
    }
  }
}
